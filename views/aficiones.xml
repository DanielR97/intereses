<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="intereses.list_aficiones_tree">
      <field name="name">intereses.aficiones.tree</field>
      <field name="model">intereses.aficion</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="aficionados"/>
          <field name="usuario_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="intereses.list_aficiones_form">
      <field name="name">intereses.aficiones.form</field>
      <field name="model">intereses.aficion</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <field name="name"/>
            <field name="aficionados"/>
            <field name="usuario_id"/>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="intereses.action_window_aficiones">
      <field name="name">Ventana de Aficiones</field>
      <field name="res_model">intereses.aficion</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
    <!--
    <record model="ir.actions.server" id="intereses.action_server">
      <field name="name">intereses server</field>
      <field name="model_id" ref="model_intereses_intereses"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

    <!-- menu categories -->

    <menuitem name="Aficiones" id="intereses.menu_aficiones" parent="intereses.menu_root"/>

    <!-- actions -->

    <menuitem name="Listado" id="intereses.aficiones_list" parent="intereses.menu_aficiones"
              action="intereses.action_window_aficiones"/>

  </data>
</odoo>